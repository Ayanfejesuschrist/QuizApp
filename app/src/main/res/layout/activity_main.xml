<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_marginBottom="16dp"
            android:text="@string/Question1" />

        <RadioGroup
            android:id="@+id/radioQuestion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioOption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/Q1option_1" />

            <RadioButton
                android:id="@+id/radioOption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/Q1option_2" />

            <RadioButton
                android:id="@+id/radioOption3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/Q1option_3" />

            <TextView
                style="@style/HeaderTextStyle"
                android:layout_marginBottom="16dp"
                android:text="@string/Question2" />

            <CheckBox
                android:id="@+id/checkbox_meter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="@string/Q2option_1"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkbox_ammeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="@string/Q2option_2"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkbox_ohm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="@string/Q2option_3"
                android:textSize="16sp" />

            <TextView
                style="@style/HeaderTextStyle"
                android:layout_marginBottom="16dp"
                android:text="@string/Question3" />

            <EditText
                android:id="@+id/question3_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Add Your Answer here" />


            <TextView
                style="@style/HeaderTextStyle"
                android:layout_marginBottom="16dp"
                android:text="@string/Question4" />

            <RadioGroup
                android:id="@+id/radioQuestion4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </RadioGroup>

            <RadioButton
                android:id="@+id/radio2Option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClickedQues4"
                android:text="@string/Q4option_1" />

            <RadioButton
                android:id="@+id/radio2Option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClickedQues4"
                android:text="@string/Q4option_2" />

            <RadioButton
                android:id="@+id/radio2Option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClickedQues4"
                android:text="@string/Q4option_3" />

        </RadioGroup>


        <TextView
            style="@style/HeaderTextStyle"
            android:layout_marginBottom="16dp"
            android:text="@string/Question5" />

        <EditText
            android:id="@+id/editTextQuestion5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Add Your Answer here" />


        <Button
            style="@style/HeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="submitAnswer"
            android:text="@string/submit_button" />

    </LinearLayout>


</ScrollView>